<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_equation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="end"
        android:padding="16dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/tv_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="equation" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="16dp"
        android:textColor="@color/default_text"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/flow_keypad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="result" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow_keypad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:constraint_referenced_ids="btn_1, btn_2, btn_3, btn_clear, btn_4, btn_5, btn_6, btn_plus, btn_7, btn_8, btn_9, btn_minus, view_blank_1, btn0, view_blank_2, btn_equal"
        app:flow_horizontalGap="8dp"
        app:flow_maxElementsWrap="4"
        app:flow_verticalGap="0dp"
        app:flow_wrapMode="aligned"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1" />

    <Button
        android:id="@+id/btn_1"
        style="@style/numberKeypad"
        android:onClick="numberClicked"
        android:text="1"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_2"
        style="@style/numberKeypad"
        android:onClick="numberClicked"
        android:text="2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_3"
        style="@style/numberKeypad"
        android:onClick="numberClicked"
        android:text="3"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_clear"
        style="@style/operatorKeypad"
        android:onClick="clearClicked"
        android:text="C"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_4"
        style="@style/numberKeypad"
        android:onClick="numberClicked"
        android:text="4"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_5"
        style="@style/numberKeypad"
        android:onClick="numberClicked"
        android:text="5"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_6"
        style="@style/numberKeypad"
        android:onClick="numberClicked"
        android:text="6"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_plus"
        style="@style/operatorKeypad"
        android:onClick="operatorClicked"
        android:text="+"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_7"
        style="@style/numberKeypad"
        android:onClick="numberClicked"
        android:text="7"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_8"
        style="@style/numberKeypad"
        android:onClick="numberClicked"
        android:text="8"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_9"
        style="@style/numberKeypad"
        android:onClick="numberClicked"
        android:text="9"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_minus"
        style="@style/operatorKeypad"
        android:onClick="operatorClicked"
        android:text="-"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view_blank_1"
        style="@style/blankKeypad"
        android:text="0"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn0"
        style="@style/numberKeypad"
        android:onClick="numberClicked"
        android:text="0"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view_blank_2"
        style="@style/blankKeypad"
        android:text="0"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_equal"
        style="@style/operatorKeypad"
        android:onClick="equalClicked"
        android:text="="
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>